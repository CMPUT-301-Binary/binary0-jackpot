<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/event_poster"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/_ukj7h"
        android:contentDescription="Event poster" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/event_name_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/event_joined_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20/30 joined lottery"
            android:textSize="14sp"
            android:textColor="#777"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/event_free_spots_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/30 spots free"
            android:textSize="14sp"
            android:textColor="#777"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

</LinearLayout>
