<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Top app bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Jackpot.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.Jackpot.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main content (holds the fragments) -->
    <include
        android:id="@+id/content_main"
        layout="@layout/content_main"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <!-- Floating Action Button - positioned above bottom nav -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="72dp"
        android:contentDescription="@string/fab_content_description"
        app:backgroundTint="#8FC8EB"
        app:srcCompat="@android:drawable/ic_input_add"
        app:fabSize="normal"
        app:elevation="6dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>